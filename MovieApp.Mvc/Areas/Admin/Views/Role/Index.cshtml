@model MovieApp.Entities.Dtos.RoleListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Roller";
}
<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Role" asp-action="Index">Roller</a></li>
</ol>
<div id="modalPlaceHolder" aria-hidden="true"></div>
<div class="card mb-4">
    <div class="card-header">
        <div class="row">
            <div class="row-cols-3">
                <i class="fas fa-table mr-1"></i>
                Roller
            </div>
            <div class="row-cols-9">
                <a asp-area="Admin" asp-controller="Role" asp-action="Index" class="btn btn-primary col-md-auto">Yenile</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="rolesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Rol Adı</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Rol Adı</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var role in Model.Roles)
                    {
                        <tr name="@role.Id">
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>