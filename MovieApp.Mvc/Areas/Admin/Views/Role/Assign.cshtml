@model MovieApp.Entities.Dtos.UserRoleAssignDto
@{
    ViewData["Title"] = "Role Atama İşlemi";
}

<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title"><span class="fas fa-user-shield"></span> @Model.UserName Kullanıcısına Rol Atanıyor...</h5>
            <a asp-action="Index" asp-controller="User" class="close"></a>
                <span aria-hidden="true">&times;</span>
            </a>
        </div>
        <div class="modal-body">
            <form asp-action="Assign">
                <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
                <input type="hidden" asp-for="UserId" />
                <div class="form-row">
                    @for (int i = 0; i < Model.RoleAssignDtos.Count; i++)
                    {
                        switch (i)
                        {
                            case 0:
                                <div class="form-group col-md-12">
                                    <h4 class="text-center"><span class="fas fa-th-list"></span> Kategori İzinleri</h4>
                                </div>
                                break;
                            case 4:
                                <div class="form-group col-md-12">
                                    <h4 class="text-center"><span class="fas fa-file-alt"></span> Makale İzinleri</h4>
                                </div>
                                break;
                            case 8:
                                <div class="form-group col-md-12">
                                    <h4 class="text-center"><span class="fas fa-users"></span> Kullanıcı İzinleri</h4>
                                </div>
                                break;
                            case 12:
                                <div class="form-group col-md-12">
                                    <h4 class="text-center"><span class="fas fa-user-shield"></span> Rol İzinleri</h4>
                                </div>
                                break;
                            case 16:
                                <div class="form-group col-md-12">
                                    <h4 class="text-center"><span class="fas fa-comments"></span> Yorum İzinleri</h4>
                                </div>
                                break;
                            case 20:
                                <div class="form-group col-md-12">
                                    <h4 class="text-center"><span class="fas fa-shield-alt"></span> Genel İzinleri</h4>
                                </div>
                                break;
                        }
                        <div class="form-group col-md-3">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" asp-for="@Model.RoleAssignDtos[i].HasRole" />
                                <label asp-for="@Model.RoleAssignDtos[i].RoleId">@Model.RoleAssignDtos[i].RoleName</label>
                                <input type="hidden" asp-for="@Model.RoleAssignDtos[i].RoleId" />
                                <input type="hidden" asp-for="@Model.RoleAssignDtos[i].RoleName" />
                            </div>
                        </div>
                    }
                </div>
                <div class="form-group">
                    <input type="submit" value="Assign" class="btn btn-primary" />
                </div>
            </form>      
        </div>
        <div class="modal-footer">
            <a asp-action="Index" asp-controller="User" class="btn btn-primary"><span class="fas fa-times"></span> İptal</a>
            <input type="submit" value="Kaydet" class="btn btn-primary fas fa-save" />
        </div>
    </div>
</div>

