@model MovieApp.Entities.Dtos.CommentAddDto
<div class="card my-4">
    <h5 class="card-header">Bir yorum ekle:</h5>
    <div class="card-body form-card">
        <form asp-controller="Comment" asp-action="Add" method="post" id="form-comment-add">
            <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
            <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
            <input asp-for="MovieId" type="hidden" />
            <input asp-for="UserId" type="hidden" />
            <input asp-for="UserName" type="hidden" />
            <div class="form-group">
                <label asp-for="UserName">@Model.UserName</label>
                @*<input type="text" asp-for="UserId" class="form-control" />*@
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="3" asp-for="Content"></textarea>
            </div>
            <button type="submit" class="btn btn-primary" id="btnSave">Ekle</button>
        </form>
    </div>
</div>